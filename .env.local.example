# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (REQUIRED for webhook to bypass RLS)
# Get this from Supabase Dashboard > Project Settings > API > service_role key
# WARNING: Never expose this key on the client side
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Stripe Webhook Secret (REQUIRED for production)
# Get this from Stripe Dashboard > Developers > Webhooks > Signing secret
# For local development with Stripe CLI: stripe listen --forward-to localhost:3000/api/webhook
STRIPE_WEBHOOK_SECRET=whsec_...

# Admin Basic Authentication (Optional but recommended for production)
# If set, /admin routes will require Basic authentication before Supabase login
# Use strong passwords (16+ characters with letters, numbers, symbols)
ADMIN_BASIC_AUTH_USER=admin
ADMIN_BASIC_AUTH_PASSWORD=your-secure-password-here
